<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/signup_back"
    android:layout_height="match_parent"
    tools:context=".Activities.ChangePasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@mipmap/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="60dp"
        android:text="Change Password"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/appcolor"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Otp"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/user"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:layout_marginBottom="-1dp"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:background="@drawable/uper_right_corner"
                    android:id="@+id/et_otp"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/email"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginBottom="-1dp"
                    android:inputType="textPassword"
                    android:background="@drawable/only_stroke" />






                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/password"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/opensans_regular"
                    android:inputType="textPassword"
                    android:background="@drawable/bottom_right_corner"
                    android:id="@+id/et_Conpassword"/>
            </LinearLayout>



            <ImageView
                android:id="@+id/img_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/tick"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/layout"/>

        </RelativeLayout>






    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>

</RelativeLayout>