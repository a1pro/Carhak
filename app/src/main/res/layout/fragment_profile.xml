<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/img"
                android:layout_margin="10dp"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:layout_marginTop="-30dp"
                android:background="@mipmap/edit"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Johnson Smith"
        android:fontFamily="@font/opensans_regular"
        android:backgroundTint="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:textColor="@color/appcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JohnsonSmith123@gmail.com"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginLeft="15dp"
        android:inputType="textEmailAddress"
        android:textSize="13sp"
        android:singleLine="true"
        android:backgroundTint="@color/white"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:textColor="@color/appcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone no"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:hint="+0098 789 654 78"
        android:textSize="13sp"
        android:inputType="phone"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:backgroundTint="@color/white"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/appcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="654 Church, San Francisco. CA"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:textSize="13sp"
        android:maxLines="1"
        android:backgroundTint="@color/white"
        android:layout_marginRight="15dp"
        android:textColor="@color/appcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zipcode"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1160116"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/appcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>


        <Button
            android:id="@+id/bt_save"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Save"
            android:fontFamily="@font/opensans_regular"
            android:background="@drawable/blue_corner_back"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/progressBar"/>
    </RelativeLayout>
</ScrollView>

</LinearLayout>