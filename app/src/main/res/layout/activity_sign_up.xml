<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/signup_back"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@mipmap/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="60dp"
        android:text="Carhak"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/appcolor"
        android:textSize="38sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginBottom="30dp"
            android:text="Sign Up"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/user"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:layout_marginBottom="-1dp"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:background="@drawable/uper_right_corner"
                    android:id="@+id/et_name"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/email"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginBottom="-1dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/only_stroke" />



                <EditText
                    android:id="@+id/et_no"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/mobileno"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:layout_marginBottom="-1dp"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:background="@drawable/only_stroke" />


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="20sp"
                    android:drawableLeft="@mipmap/password"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/opensans_regular"
                    android:inputType="textPassword"
                    android:background="@drawable/bottom_right_corner"
                    android:id="@+id/et_password"/>
            </LinearLayout>



            <ImageView
                android:id="@+id/img_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/tick"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/layout"/>

        </RelativeLayout>



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="30dp"
            android:buttonTint="@color/appcolor"
            android:text="@string/checkbox"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:text="Already have an account?"/>

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:text="Sign in"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>


</RelativeLayout>